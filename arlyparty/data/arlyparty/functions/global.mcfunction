# Detect when a player leaves (any) spawn and switch them back to survival
execute as @a if entity @s[gamemode=adventure] unless entity @s[predicate=arlyparty:spawn_overworld] unless entity @s[predicate=arlyparty:spawn_the_nether] unless entity @s[predicate=arlyparty:nether_ceiling] unless entity @s[predicate=arlyparty:lighthouse_jupiter] unless entity @s[predicate=arlyparty:lighthouse_mars] unless entity @s[predicate=arlyparty:lighthouse_mercury] unless entity @s[predicate=arlyparty:lighthouse_venus] run tellraw @s {"text":"Your game mode has been updated to Survival Mode"}
execute as @a if entity @s[gamemode=adventure] unless entity @s[predicate=arlyparty:spawn_overworld] unless entity @s[predicate=arlyparty:spawn_the_nether] unless entity @s[predicate=arlyparty:nether_ceiling] unless entity @s[predicate=arlyparty:lighthouse_jupiter] unless entity @s[predicate=arlyparty:lighthouse_mars] unless entity @s[predicate=arlyparty:lighthouse_mercury] unless entity @s[predicate=arlyparty:lighthouse_venus] run gamemode survival @s
